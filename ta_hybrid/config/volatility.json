{
    "category": "Volatility Indicators",
    "indicators": [
        {
            "name": "ATR",
            "function_name": "atr",
            "display_name": "Average True Range",
            "description": "Measures market volatility",
            "parameters": [
                {
                    "name": "length",
                    "type": "number",
                    "label": "Length",
                    "default": 14,
                    "description": "Number of periods"
                }
            ],
            "outputs": ["ATR"]
        },
        {
            "name": "NATR",
            "function_name": "natr",
            "display_name": "Normalized ATR",
            "description": "ATR normalized as percentage",
            "parameters": [
                {
                    "name": "length",
                    "type": "number",
                    "label": "Length",
                    "default": 14,
                    "description": "Number of periods"
                }
            ],
            "outputs": ["NATR"]
        },
