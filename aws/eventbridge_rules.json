{
  "StartupRule": {
    "Name": "tradelayout-startup",
    "Description": "Start TradeLayout Engine at 8:45 AM IST (Mon-Fri)",
    "ScheduleExpression": "cron(15 3 ? * MON-FRI *)",
    "State": "ENABLED",
    "Targets": [
      {
        "Arn": "arn:aws:lambda:ap-south-1:ACCOUNT_ID:function:tradelayout-ec2-manager",
        "Input": "{\"action\": \"start\", \"instance_id\": \"INSTANCE_ID\"}"
      }
    ]
  },
  "ShutdownRule": {
    "Name": "tradelayout-shutdown",
    "Description": "Stop TradeLayout Engine at 3:45 PM IST (Mon-Fri)",
    "ScheduleExpression": "cron(15 10 ? * MON-FRI *)",
    "State": "ENABLED",
    "Targets": [
      {
        "Arn": "arn:aws:lambda:ap-south-1:ACCOUNT_ID:function:tradelayout-ec2-manager",
        "Input": "{\"action\": \"stop\", \"instance_id\": \"INSTANCE_ID\"}"
      }
    ]
  },
  "Notes": {
    "Timezone": "UTC (IST = UTC + 5:30)",
    "Startup": "8:45 AM IST = 3:15 AM UTC",
    "Shutdown": "3:45 PM IST = 10:15 AM UTC",
    "CronFormat": "minute hour day month day-of-week year",
    "Example": "cron(15 3 ? * MON-FRI *) = 3:15 AM UTC Mon-Fri"
  }
}
