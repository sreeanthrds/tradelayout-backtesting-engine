                {
                    "name": "length",
                    "type": "number",
                    "label": "Length",
                    "default": 20,
                    "description": "Moving average period"
                },
                {
                    "name": "std",
                    "type": "number",
                    "label": "Standard Deviation",
                    "default": 2,
                    "description": "Number of standard deviations"
                },
                {
                    "name": "price_field",
                    "type": "dropdown",
                    "label": "Price Field",
                    "options": ["close", "open", "high", "low"],
                    "default": "close",
                    "description": "Price field to use"
                }
