                {
                    "name": "length",
                    "type": "number",
                    "label": "Length",
                    "default": 20,
                    "description": "EMA period"
                },
                {
                    "name": "scalar",
                    "type": "number",
                    "label": "ATR Multiplier",
                    "default": 2,
                    "description": "ATR multiplier"
                }
            ],
            "outputs": ["KCL", "KCB", "KCU"]
        },
        {
            "name": "DONCHIAN",
